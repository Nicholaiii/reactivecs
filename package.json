{
  "name": "reactivecs",
  "version": "0.1.0",
  "description": "A rxjs wrapper for bitecs",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "tsc",
    "build": "tsc",
    "lint": "ts-standard --fix",
    "start": "tsx watch src/index.ts",
    "test": "jest",
    "release": "release-it"
  },
  "author": {
    "name": "Nicholai Nissen",
    "email": "nicholainissen@gmail.com",
    "url": "https://nicholai.dev"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "bitecs": "^0.3.38",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "release-it": "^15.5.0",
    "rxjs": "^7.5.7",
    "ts-jest": "^29.0.3",
    "ts-standard": "^12.0.1",
    "tsx": "^3.12.1",
    "typescript": "^4.9.3"
  },
  "peerDependencies": {
    "bitecs": ">=0.3.38",
    "rxjs": ">=7.5.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "ts-standard --fix && jest"
    }
  },
  "keywords": [
    "rxjs",
    "bitecs",
    "reactive",
    "ecs",
    "entity",
    "component",
    "system"
  ],
  "release-it": {
    "github": {
      "release": true
    },
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "hooks": {
      "before:init": [
        "npm run lint",
        "npm test"
      ],
      "after:bump": "npm run build",
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "header": "# Changelog",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {}
          ]
        }
      }
    }
  }
}
